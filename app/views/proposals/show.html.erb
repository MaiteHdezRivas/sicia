<div class= "row" >
  <div class= "small-12 columns">
    <h1><%= t('proposals.show.title') %></h1>
    <%= render 'proposal_data', proposal: @proposal %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <h5><%= t('proposals.show.data_sicia') %></h5>
    <fieldset>
      <table>
        <tr>
          <th><%= t('ransack.attributes.proposal.received_at') %>:</th>
          <td><%= @proposal.received_at %></td>
        </tr>
        <tr>
          <th><%= t('ransack.attributes.proposal.internal_control_file') %>:</th>
          <td>
            <%= " #{@proposal.internal_control_file.code}
                #{@proposal.internal_control_procedure.code.to_s.rjust(5, "0")}
                #{@proposal.internal_control_action.code.to_s.rjust(5, "0")} -
                  #{@proposal.internal_control_file.description}
                #{@proposal.internal_control_procedure.description}
                #{@proposal.internal_control_action.description}" %>
          </td>
        </tr>
        <tr>
          <th><%= t('ransack.attributes.proposal.updated_at') %>:</th>
          <td><%= @proposal.updated_at %></td>
          <th><%= t('ransack.attributes.proposal.updated_by') %>:</th>
          <td><%= @proposal.updated_by %>FDT001 Fulanito de tal </td>
        </tr>
      </table>
    </fieldset>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <h5><%= t('ransack.models.requeriment.RB.other') %></h5>
    <fieldset>
      <table>
        <tr class="requeriment">
          <th class="text-left requeriment"> <%= t('ransack.models.requeriment.RB.one') %> </th>
          <th class="text-left requeriment"> <%= t('ransack.models.requeriment.observance') %> </th>
          <th class="text-left requeriment"> <%= t('ransack.models.requeriment.update_data') %></th>
        </tr>
        <% @proposal.requeriments.basic_req.each do |requeriment| %>
          <tr>
            <td> requeriment.description</td>
            <td>  </td>
            <td>  </td>
          </tr>
       <% end %>
       <% if @proposal.requeriments.basic_req.count == 0 %>
         <tr>
           <td class= "text-center" colspan="3"> <%= t('proposal.show.requeriments.empty')%> </td>
         </tr>

       <% end %>
      </table>
    </fieldset>
  </div>
</div>
