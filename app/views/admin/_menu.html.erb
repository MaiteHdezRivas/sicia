      <% end %>
    </li>

    <li id="stats" <%= 'class=active' if controller_name == 'stats' %>>
      <%= link_to admin_root_path do %>
        <span class="icon-chart-bar"></span>
        <%= t('admin.menu.stats') %>
      <% end %>
    </li>

  </ul>
